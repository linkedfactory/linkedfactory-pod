@prefix login: <plugin://net.enilink.platform.core/Login/> .
login: login:jaasConfigUrl <jaas.conf> ;
	login:loginModule [ login:jaasConfigName "LinkedFactory-POD" ; rdfs:label "LinkedFactory-POD" ] .
